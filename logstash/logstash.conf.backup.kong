input { 
  tcp {
    port => "9400"
  }
}
filter {
  if [message] =~ "x-kong" {
    json{
      source => "message"
      target => "msg"
    }
    json{
      source => "msg"
    }
    mutate { add_tag => "Kong" }
  }
}
output {
 elasticsearch {
  hosts => ["marathon-lb.inf.marathon-bsa.mesos:20041"]
  index => "logstash-%{+YYYY.MM.dd}"
 }
 stdout { codec => rubydebug }
}
